<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-7">
      {{profile-update name=model.user.name firstName=model.user.firstName lastName=model.user.lastName descrip=model.user.descrip}}
    </div>
    <div class="col-xs-12 col-sm-5">
      {{#each model.teams as |team|}}
        {{team-member-update name=team.name userIsMember=team.userIsMember memberOf=team.memberOf id=team.id}}
      {{/each}}
    </div>
  </div>
</div>
<div class="modal fade image-upload" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Upload Photo Here</h4>
      </div>
      <div class="modal-body">
        {{#file-picker  accept=".jpg,.jpeg,.gif,.png" fileLoaded="fileLoaded" }}
          Drag here or click to upload a file
        {{/file-picker}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" {{action "displayImage"}} data-dismiss="modal" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
